<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/txtNumero"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn9"
        android:layout_alignEnd="@+id/btn9"
        android:onClick="onClicktxtView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_marginTop="63dp"
        android:onClick="onClickbtn7"
        android:layout_below="@+id/txtNumero"
        android:layout_toLeftOf="@+id/btn8"
        android:layout_toStartOf="@+id/btn8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/btn8"
        android:layout_alignTop="@+id/btn7"
        android:layout_toLeftOf="@+id/btn9"
        android:layout_toStartOf="@+id/btn9"
        android:onClick="onClickbtn8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/btn9"
        android:layout_alignBottom="@+id/btn8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickbtn9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btn4"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@+id/btn8"
        android:layout_toStartOf="@+id/btn8"
        android:onClick="onClickbtn4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/btn5"
        android:layout_alignBottom="@+id/btn4"
        android:layout_alignRight="@+id/btn8"
        android:layout_alignEnd="@+id/btn8"
        android:onClick="onClickbtn5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/btn6"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignLeft="@+id/btn9"
        android:layout_alignStart="@+id/btn9"
        android:onClick="onClickbtn6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/btn1"
        android:onClick="onClickbtn1"
        android:layout_below="@+id/btn4"
        android:layout_toLeftOf="@+id/btn2"
        android:layout_toStartOf="@+id/btn2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/btn2"
        android:layout_alignBottom="@+id/btn1"
        android:layout_alignRight="@+id/btn5"
        android:layout_alignEnd="@+id/btn5"
        android:onClick="onClickbtn2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/btn3"
        android:layout_alignBottom="@+id/btn2"
        android:layout_alignRight="@+id/btn6"
        android:layout_alignEnd="@+id/btn6"
        android:onClick="onClickbtn3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btn0"
        android:onClick="onClickbtn0"
        android:layout_below="@+id/btn1"
        android:layout_toLeftOf="@+id/btnpunto"
        android:layout_toStartOf="@+id/btnpunto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/btnpunto"
        android:onClick="onClickbtnpunto"
        android:layout_below="@+id/btn2"
        android:layout_toLeftOf="@+id/btnigual"
        android:layout_toStartOf="@+id/btnigual" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnmas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn4"
        android:onClick="onClickbtnmas"
        android:layout_alignBottom="@+id/btnmenos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnmenos"
        android:onClick="onClickbtnmenos"
        android:layout_below="@+id/btn0"
        android:layout_toLeftOf="@+id/btndiv"
        android:layout_toStartOf="@+id/btndiv" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/btndiv"
        android:onClick="onClickbtndiv"
        android:layout_below="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/btnmulti"
        android:onClick="onClickbtnmulti"
        android:layout_below="@+id/btnigual"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btnigual"
        android:onClick="onClickbtnigual"
        android:layout_below="@+id/btn3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/btnborrar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickbtnborrar"
        android:layout_above="@+id/btnmas"
        android:layout_alignTop="@+id/btn7" />

    <TextView
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:text="By Jordi Martinez"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAlignment="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M2"
        android:id="@+id/btnM2"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnR2"
        android:layout_toStartOf="@+id/btnR2"
        android:onClick="onClickbtnM2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R2"
        android:id="@+id/btnR2"
        android:layout_alignTop="@+id/btnM2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:onClick="onClickbtnR2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R1"
        android:id="@+id/btnR1"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnM2"
        android:layout_toStartOf="@+id/btnM2"
        android:onClick="onClickbtnR1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M1"
        android:id="@+id/btnM1"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnR1"
        android:layout_toStartOf="@+id/btnR1"
        android:onClick="onClickbtnM1" />

</RelativeLayout>

